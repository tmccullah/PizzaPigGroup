import javafx.scene.layout.*;
import javafx.scene.control.Button;
import javafx.scene.text.Font;
import javafx.event.EventHandler;
import javafx.event.ActionEvent;
import javafx.geometry.Insets;
import java.util.ArrayList;
// import JavaFX package with its subpackages and classes & ArrayList class from util package


/******************************************************************************************************

NAME: Tori McCullah

DATE: 09/11/2017

******************************************************************************************************/


public class MainPane extends Pane {


// grid pane will organize buttons in an ordered fashion
   private GridPane grid = new GridPane();
   
   
// this object will allow modifications on to buttons to be made through pre-set methods
   private ButtonManipulation buttonEdit = new ButtonManipulation();
   
   
// create pizza, size, crust, toppings, drink, and back buttons
   protected Button pizza = new Button("Pizza");
   protected Button pizzaSize = new Button("Size");
   protected Button crust = new Button("Crust");
   protected Button toppings = new Button("Toppings");
   protected Button drinks = new Button("Drinks");
   protected Button back = new Button("BACK");
   
   
// create an array of the buttons
   ArrayList<Button> buttonList = new ArrayList<>();
    
   
// establish contructor   
   public MainPane() {
   
   // add buttons to list
      buttonList.add(pizzaSize);
      buttonList.add(crust);
      buttonList.add(toppings);
      buttonList.add(drinks);
      buttonList.add(pizza);
   
   // format buttons
      buttonEdit.styleManyButtons(buttonList);
      
   // we deactivate these options so that user must select pizza items in specific order
      deactivatePizzaOptions();

      
   // back button is styled different to stand out
      buttonEdit.buttonStyle2(back);

   // add buttons to grid
      grid.addRow(0, pizza, pizzaSize, crust, toppings, drinks, back);
      grid.setPadding(new Insets(30, 30, 30, 30));
      grid.setHgap(20);
      grid.setVgap(20);
      
      getChildren().add(grid);
   }


// to activate buttons   
   public void activateButtons() { 
      buttonEdit.turnOn(pizza);
      buttonEdit.turnOn(drinks);
   }
   
   
// to deactivate buttons
   public void deactivatePizzaOptions() {
      buttonEdit.turnOff(pizzaSize);
      buttonEdit.turnOff(crust);
      buttonEdit.turnOff(toppings);
   }
       
}
