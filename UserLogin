    private void JButtonExitActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        System.exit(0);
    }                                           

    private void JButtonResetActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        
        jtxtUserName.setText(null);
        jPassword.setText(null);
    }                                            

    private void jButtonLoginActionPerformed(java.awt.event.ActionEvent evt) {                                             

        String password = jPassword.getText();
        String username = jtxtUserName.getText();
        
        if(password.contains("one") && (username.contains("king"))) {
           
            jtxtUserName.setText(null);
            jPassword.setText(null);
            systemExit(); //Call the SystemExit method 
            
            UserLogin_s Info = new UserLogin_s();
            Info.setVisible(true);
            
        }
        
             else 
            JOptionPane.showMessageDialog(null,"Invalid Login Creditials","Login Error",JOptionPane.ERROR_MESSAGE);
            jPassword.setText(null);
            jtxtUserName.setText(null);
        
    }                                            

    
    
